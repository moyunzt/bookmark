{
  "manifest_version": 3,
  "name": "PrismMark",
  "version": "1.0",
  "description": "美化浏览器书签的显示效果",
  "permissions": [
    "bookmarks",
    "tabs",
    "activeTab",
    "storage",
    "favicon"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mocloud4@163.com"
    }
  }
} 